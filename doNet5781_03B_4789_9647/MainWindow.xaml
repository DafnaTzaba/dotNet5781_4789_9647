<Window x:Class="doNet5781_03B_4789_9647.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:doNet5781_03B_4789_9647"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>

        <Grid Name="MainGrid">

            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="90*"/>

            </Grid.RowDefinitions>
            <Button x:Name="addBus" Content="Add Bus" HorizontalAlignment="Left" Margin="689,0,0,11" Width="75" Height="21" VerticalAlignment="Bottom" Click="addBus_Click"  />

            <ListView x:Name="allbuses" HorizontalAlignment="Left" Height="256" Margin="75,54,0,0" Grid.Row="1" VerticalAlignment="Top" Width="640" PreviewMouseDoubleClick="doubleflick" >
                <ListView.View>
                    <GridView x:Name="allbusesgrid"  >
                        <GridViewColumn Header="license" Width="120" DisplayMemberBinding="{Binding License}"  />

                        
                        <GridViewColumn Width="60">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button  Content="Fuel"  Margin="0" VerticalAlignment="Center" IsEnabled="{Binding  Path=enable}" Click="Button_Click"  />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button  Content="Start Travel"  Margin="0" VerticalAlignment="Center" Click="Pick_Button_Click"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>


                        <GridViewColumn Width="130">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <ProgressBar x:Name="resultprograssBar" Height="10" Width="100" HorizontalAlignment="center" VerticalAlignment="Bottom" Minimum="0" Maximum="100"  Value="{Binding work, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>


                        <GridViewColumn Width="50">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock x:Name="timeToEnd" Text="{Binding Time_left , UpdateSourceTrigger=PropertyChanged}" Width="120" Height="20" FlowDirection="LeftToRight"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>


                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Window>
