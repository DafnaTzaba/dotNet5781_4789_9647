        <Button x:Name="forgetPassword" Content="שכחתי&#xA; סיסמא" HorizontalAlignment="Left" Margin="105,240,0,140.667" Width="95" Click="forgetPassword_Click"  Style="{DynamicResource AdminWindow}" RenderTransformOrigin="0.8,-0.806"/>
        <GroupBox x:Name="passEmail"  Style="{DynamicResource allGrpuoBox}" Header="הכנס כתובת מייל לשחזור סיסמא" HorizontalAlignment="Left" Height="215" Margin="320,190,0,0" VerticalAlignment="Top" Width="440">
            <Grid HorizontalAlignment="Left" Height="175" Margin="114,30,0,0" VerticalAlignment="Top" Width="460">
                <TextBox x:Name="emailTextBOx" Height="30" Margin="30,40,280,0" TextWrapping="Wrap" Text="xxx@xxx.xxx" VerticalAlignment="Top"/>
                <Button x:Name="button" Style="{DynamicResource LoginButton}" Content="שלח אימייל" HorizontalAlignment="Left" Height="25" Margin="40,105,0,0" VerticalAlignment="Top" Width="140" Click="button_Click" RenderTransformOrigin="1.712,0.787"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
