<Page x:Class="PLGui.StationWindowP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PLGui"
      mc:Ignorable="d"
      Title="StationWindowP" Height="670" Width="935">

    <Grid Margin="0,0,125,115" >

        <ListView x:Name="ListOfStations" HorizontalAlignment="Left" Height="353" Margin="35,160,0,0" VerticalAlignment="Top" Width="215" PreviewMouseDoubleClick="ListOfStations_PreviewMouseDoubleClick" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="145" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Code" Width="65"  DisplayMemberBinding="{Binding Code}"/>

                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="Search" Content="Search" HorizontalAlignment="Left" Margin="175,135,0,0" VerticalAlignment="Top" Width="75" Click="Search_Click" DataContext="{Binding ElementName=textBoxTextBox, Path=Text}"/>
        <TextBox x:Name="textBoxTextBox" HorizontalAlignment="Left" Height="30" Margin="40,130,0,0" TextWrapping="Wrap" Text="Search Station here...." PreviewKeyDown="textBoxTextBox_PreviewKeyDown" VerticalAlignment="Top" Width="130" PreviewTextInput="textBoxTextBox_PreviewTextInput" 
           GotFocus="textBoxTextBox_GotFocus" LostFocus="textBoxTextBox_LostFocus"/>
        <Label x:Name="NotExist" Content="מספר תחנה אינו קיים במערכת" HorizontalAlignment="Left" Height="35" Margin="105,90,0,0" VerticalAlignment="Top" Width="190" Foreground="#FFAC1515" RenderTransformOrigin="-0.367,1.99"/>
        <ContentControl Content="ContentControl" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</Page>
