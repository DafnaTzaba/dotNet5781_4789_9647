<Page x:Class="PLGui.StationWindowP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PLGui"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StationWindowP">

    <Grid >

        <ListView x:Name="ListOfStations" HorizontalAlignment="Left" Height="353" Margin="265,82,0,0" VerticalAlignment="Top" Width="220" PreviewMouseDoubleClick="ListOfStations_PreviewMouseDoubleClick" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="145" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Code" Width="65"  DisplayMemberBinding="{Binding Code}"/>

                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="Search" Content="Search" HorizontalAlignment="Left" Margin="545,25,0,0" VerticalAlignment="Top" Width="75" Click="Search_Click"/>
        <TextBox x:Name="textBoxTextBox" HorizontalAlignment="Left" Height="30" Margin="335,25,0,0" TextWrapping="Wrap" Text="Search Station here...." PreviewKeyDown="textBoxTextBox_PreviewKeyDown" VerticalAlignment="Top" Width="210" PreviewTextInput="textBoxTextBox_PreviewTextInput" 
           GotFocus="textBoxTextBox_GotFocus" LostFocus="textBoxTextBox_LostFocus"/>
        <Label x:Name="NotExist" Content="מספר תחנה אינו קיים במערכת" HorizontalAlignment="Left" Height="35" Margin="135,25,0,0" VerticalAlignment="Top" Width="190" Foreground="#FFAC1515"/>
    </Grid>
</Page>
