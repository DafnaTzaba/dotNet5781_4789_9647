<Page x:Class="PLGui.StationWindowP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PLGui"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StationWindowP">

    <Grid >

        <ListView x:Name="ListOfStations" HorizontalAlignment="Left" Height="353" Margin="10,58,0,0" VerticalAlignment="Top" Width="211" PreviewMouseDoubleClick="ListOfStations_PreviewMouseDoubleClick" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="145" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Code" Width="65"  DisplayMemberBinding="{Binding Code}"/>

                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
