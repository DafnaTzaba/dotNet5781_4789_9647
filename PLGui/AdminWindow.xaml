                </TransformGroup>
            </Separator.RenderTransform>

        </Separator>
        <Button x:Name="buses" Content="Buses" HorizontalAlignment="Left" Margin="0,99,0,527" VerticalAlignment="Stretch" Width="135" Click="buses_Click"/>
