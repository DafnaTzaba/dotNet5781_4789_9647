<Window x:Class="PLGui.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLGui"
        mc:Ignorable="d"
        Title="AdminWindow" Height="300" Width="472.667">
    <Grid Margin="0,0,0,-29.333" Height="212" VerticalAlignment="Top">
        <GroupBox Header="Choose Option:" HorizontalAlignment="Left" Height="186" Margin="63,10,0,-13.333" VerticalAlignment="Top" Width="333" FontSize="16" FontStyle="Italic" FontWeight="SemiBold">
            <StackPanel Margin="21,20,29,24">
                <RadioButton x:Name ="rbBuses" Content="Buses" Height="24" />
                <RadioButton x:Name ="rbLine" Content="Line" Height="23" Margin="0,0,-11,0"/>
                <RadioButton x:Name ="rbStation" Content="Station" Height="25" Margin="0,0,0.333,0"/>
                <RadioButton x:Name ="AdminUser" Content="Add New Admin-Users" Height="35"/>
            </StackPanel>
        </GroupBox>
        <Button x:Name="Start" Content="Start Working" HorizontalAlignment="Left" Height="30" Margin="175,226,0,-44" VerticalAlignment="Top" Width="124" Click="Start_Click"/>
    </Grid>
</Window>
